<activity xml:id="act-interpretarAsobreB" xmlns:xi="http://www.w3.org/2001/XInclude"> 

<title>Interpretemos <m>\frac{a}{b}</m></title>

<statement>
  <p>Resuelve cada ecuación.</p>
    <ol>
      <li>
        <p>
          <m>35 = 7x</m>
        </p>
      </li>
      <li>
        <p>
          <m>35 = 11x</m>
        </p>
      </li>
      <li>
        <p>
          <m>7x = \num{7.7}</m>
        </p>
      </li>
      <li>
        <p>
          <m>\num{0.3}x = \num{2.1}</m>
        </p>
      </li>
      <li>
        <p>
          <m>\frac{2}{5} = \frac{1}{2}x</m>
        </p>
      </li>
    </ol>
</statement>

<solution>
  <ol>
    <li>
      <p>
        <m>5</m>
      </p>
    </li>
    <li>
      <p>
        <m>\frac{35}{11}</m>
      </p>
    </li>
    <li>
      <p>
        <m>\num{1.1}</m>
      </p>
    </li>
    <li>
      <p>
        <m>7</m>
      </p>
    </li>
    <li>
      <p>
        <m>\frac{4}{5}</m>
      </p>
    </li>
  </ol>
</solution>


